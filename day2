//6.using function
#include <iostream>
using namespace std;

string vow(); 

string vow()
{
    string word = "Hello";
    string result = "\t";

    for (char c : word)
        if (!(c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u' ||
              c == 'A' || c == 'E' || c == 'I' || c == 'O' || c == 'U'))
            result += c;

    return result;
}

int main()
{
    string y = vow();
    cout << y << "\n";
}

//7.
#include <iostream>
#include <string>
using namespace std;

int main() {
    string w1, w2, w3, w4;

  
    cout << "Enter 4 words separated by space: ";
    cin >> w1 >> w2 >> w3 >> w4;

    
    cout << w3 << " " << w4 << " " << w1 << " " << w2 << "\n";

    
    auto reverse_word = [](string s) {
        int n = s.length();
        for (int i = 0; i < n / 2; ++i)
            swap(s[i], s[n - i - 1]);
        return s;
    };
     cout << reverse_word(w3) << " " << reverse_word(w4) << " "
         << reverse_word(w1) << " " << reverse_word(w2) << "\n";

    return 0;
}
